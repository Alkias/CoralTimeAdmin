@model IEnumerable<DayTasks>

@{
    ViewBag.Title = "GetDayTasksResult";
    var creationDate = Model.Count() > 0 ? Model.FirstOrDefault().Date : ViewBag.CreateDate;
}

<div class="block block-rounded">
    <div class="block-header block-header-default block-header-rtl">
        <h3 class="block-title">Day Task Results</h3>
        <div class="block-options">
            <a href="@Url.Action("CreateTimeEntry", "Home", new {date = creationDate})" class="btn btn-sm btn-primary">Create New</a>
        </div>
    </div>
    <div class="block-content">
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-striped table-vcenter">
                    <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Project)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Task)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastUpdateDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FromTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ToTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Duration)
                        </th>
                        <th></th>
                    </tr>
                    </thead>

                    <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Project)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Task)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastUpdateDate)
                            </td>
                            <td style="width:40%">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FromTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ToTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Duration)
                            </td>

                            <td class="text-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-primary js-bs-tooltip-enabled" data-bs-toggle="tooltip" title="" data-bs-original-title="Edit" onclick="location.href = '@Url.Action("UpdateTimeEntry", "Home", new {id = item.Id})'">
                                        <i class="fa fa-pencil-alt"></i>
                                    </button>
                                    <button id="deleteBtn" type="button" class="btn btn-sm btn-danger js-bs-tooltip-enabled" data-bs-toggle="tooltip" title="" data-bs-original-title="Delete" data-id="@item.Id">
                                        <i class="fa fa-times"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>